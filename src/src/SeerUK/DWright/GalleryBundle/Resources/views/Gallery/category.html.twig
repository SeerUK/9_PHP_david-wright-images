{##
 #  Page metadata
 #}
{% extends 'SeerUKDWrightCoreBundle:Core:master.html.twig' %}

{% block stylesheets %}
    {% include 'SeerUKDWrightGalleryBundle:Generic:stylesheets.html.twig' %}
{% endblock %}

{% block javascripts %}
    {% include 'SeerUKDWrightGalleryBundle:Generic:javascripts.html.twig' %}
{% endblock %}

{% block title %}{{ category.name }}{% endblock %}


{##
 #  Page content
 #}
{% block body %}

    <div class="hero-unit">
        <h1>{{ category.name }}</h1>
        <small>Possible category sub-title, this should probably be an optional feature...</small>
    </div>

    <div class="content">
        <div class="content-desc">
            {# Content here should be in paragraphs... #}
            {{ category.desc|raw }}
        </div>
        <div class="content-gallery">

            {% if category.galleries|length %}

                <ul class="clearfix thumbnails">

                    {% for gallery in category.galleries %}

                        <li>
                            <div>
                                <div class="overlay">
                                    <a class="" href="{{ url('seer_ukd_wright_gallery_gallery_short', { 'galleryId': gallery.id }) }}"></a>
                                    <h3 class="entry-title">{{ gallery.name }}</h3>
                                    <p class="posted"><span class="emp">{{ gallery.posted|relativeDateTime }}</span></p>
                                </div>

                                {% if gallery.galleryImages|length %}

                                    <img src="{{ asset(gallery.galleryImages[0].webThumbPath) }}" alt="" title="" />

                                {% else %}

                                    <img src="{{ asset('http://placebacn.com/400/400') }}" alt="" title="" />

                                {% endif %}

                            </div>
                        </li>

                    {% endfor %}

                </ul>

            {% endif %}

        </div>
    </div>

{% endblock %}
