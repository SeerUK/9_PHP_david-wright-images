                                <p class="desc">{{ gallery.desc }}</p>
                                <p class="posted">{{ gallery.posted|date('Y-m-d H:i:s') }}</p>
                            </div>

                            {% if galleryImages[gallery.id] %}

                                {# <img src="{{ asset(galleryImages[gallery.id].getWebPath) }}" alt="" title="" /> #}

                                <img src="{{ asset('http://placehold.it/400x400') }}" alt="" title="" />

                            {% else %}

                                <img src="{{ asset('http://placehold.it/305x229') }}" alt="" title="" />

                            {% endif %}

                        </div>
                    </li>

                {% endfor %}

                {% for gallery in galleries %}

                    <li>
                        <div>
                            <div class="desc">
                                <h3 class="entry-title">{{ gallery.name }}</h3>
                                <p class="desc">{{ gallery.desc }}</p>
                                <p class="posted">{{ gallery.posted|date('Y-m-d H:i:s') }}</p>
                            </div>

                            {% if galleryImages[gallery.id] %}

                                {# <img src="{{ asset(galleryImages[gallery.id].getWebPath) }}" alt="" title="" /> #}

